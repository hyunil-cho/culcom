# 환경 설정 (.env.dev, .env.staging, .env.prod 중 하나를 .env로 복사하거나)
# APP_ENV 환경변수로 직접 지정
APP_ENV=dev

# 데이터베이스 설정
# 사용할 드라이버: mysql, postgres, sqlite3, sqlserver
DB_DRIVER=mysql
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=culcom
DB_SSLMODE=disable

# 서버 설정
SERVER_PORT=8080
LOG_LEVEL=debug
DEBUG=true

# SMS API 설정
SMS_API_BASE_URL=https://www.mymunja.co.kr/Remote/RemoteSms.html
SMS_ENDPOINT=/RemoteSms.html
LMS_ENDPOINT=/RemoteMms.html
SMS_MAX_LENGTH=90

# Google Calendar OAuth 설정
# Google Cloud Console에서 발급받은 OAuth 2.0 클라이언트 ID와 시크릿을 입력하세요
# https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
